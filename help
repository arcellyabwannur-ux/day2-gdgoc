program HitungJumlahRataRata;
uses crt;

var
  n, i, angka, jumlah: integer;
  rata: real;

begin
  clrscr;
  write('Masukkan jumlah angka (N): '); 
  readln(n);

  jumlah := 0;

  for i := 1 to n do
  begin
    write('Angka ke-', i, ': ');
    readln(angka);
    jumlah := jumlah + angka;
  end;

  rata := jumlah / n;

  writeln;
  writeln('Jumlah Total : ', jumlah);
  writeln('Rata-rata : ', rata:0:1);

  readln;
end.
